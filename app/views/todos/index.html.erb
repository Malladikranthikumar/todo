<h2>Listing All Todos</h2>

<%= link_to "Create a Todo",new_todo_path%>
<table>
	<tr>
		<th>Name</th>
		<th>Description</th>
	</tr>
	<% @todos.each do |f|%>
		<tr>
			<td><%=f.name%></td>
			<td><%=f.description%></td>
			<td><%=link_to "Edit",edit_todo_path(f)%></td>
			<td><%=link_to "Show",todo_path(f)%></td>
			<td><%= link_to "Delete",todo_path(f), method: :delete, data: {confirm:"Are you sure!"}%></td>
		</tr>
	<%end%>
</table>

